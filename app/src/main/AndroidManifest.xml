<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tum.mitfahr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission
        android:name="de.tum.mitfahr.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission
        android:name="de.tum.mitfahr.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name="de.tum.mitfahr.TUMitfahrApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.tum.mitfahr.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tum.mitfahr.ui.LoginRegisterActivity"
            android:theme="@style/NoActionBarTheme"
            android:noHistory="true"
            android:label="@string/title_activity_login_register"></activity>

        <receiver
            android:name="de.tum.mitfahr.notifications.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="de.tum.mitfahr" />
            </intent-filter>
        </receiver>
        <service android:name="de.tum.mitfahr.notifications.GcmIntentService" />

    </application>

</manifest>
