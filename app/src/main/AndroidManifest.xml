<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tum.mitfahr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name="de.tum.mitfahr.TUMitfahrApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.tum.mitfahr.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tum.mitfahr.ui.LoginRegisterActivity"
            android:theme="@style/NoActionBarTheme"
            android:noHistory="true"
            android:label="@string/title_activity_login_register"></activity>

        <activity
            android:name="de.tum.mitfahr.ui.RideDetailsActivity"
            android:noHistory="true"
            android:label="">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
