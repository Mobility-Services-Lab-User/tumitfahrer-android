<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:baselineAligned="false">

    <ImageView
        android:layout_width="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:scaleType="center"
        android:id="@+id/my_rides_location_image"
        android:src="@drawable/ic_account_dark"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/my_rides_from_text"
            android:text="Marienplatz"
            android:textColor="@color/gray"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:drawableLeft="@drawable/time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/my_rides_to_text"
            android:layout_marginBottom="8dp"
            android:drawablePadding="8dp"
            android:text="Garching-Forschungzentrum"
            android:textColor="@color/gray"
            android:drawableLeft="@drawable/time_icon"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/ride_item_row_three"
            android:layout_width="fill_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/my_rides_time_text"
                android:text="11.00"
                android:textColor="@color/gray"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/my_rides_date_text"
                android:layout_toRightOf="@id/my_rides_time_text"
                android:text="13.12.2014"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="3dp"

                android:gravity="center"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/my_ride_type_image3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/holo_red_light"
            android:padding="3dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/placeholder" />

        <ImageView
            android:id="@+id/my_ride_type_image2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/holo_orange_light"
            android:padding="3dp"
            android:src="@drawable/placeholder" />

        <ImageView
            android:id="@+id/myride_type_image1"
            android:layout_width="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_height="24dp"
            android:background="@android:color/holo_green_light"
            android:padding="3dp"
            android:src="@drawable/placeholder" />
    </LinearLayout>

</LinearLayout>